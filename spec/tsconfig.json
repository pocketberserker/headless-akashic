{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "types": ["node", "jasmine"],
    "declaration": true,
    "outDir": "./lib",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ]
}
